}

.form-group{
  margin-bottom:18px;
}

label{
  display:block;
  font-size:.85rem;
  font-weight:600;
  margin-bottom:6px;
}

input{
  width:100%;
  padding:12px 14px;
  border-radius:10px;
  border:1px solid var(--border);
  font-size:.95rem;
}

input:focus{
  outline:none;
  border-color:var(--primary);
  background:#f8fbff;
}

.auth-btn{
  width:100%;
  padding:12px;
  border-radius:12px;
  border:none;
  background:var(--primary);
  color:#fff;
  font-size:1rem;
  font-weight:700;
  cursor:pointer;
}

.auth-btn:hover{
  background:var(--primary-dark);
}

.auth-footer{
  text-align:center;
  margin-top:20px;
  font-size:.85rem;
}

.auth-footer a{
  color:var(--primary);
  font-weight:600;
  text-decoration:none;
}
</style>

</head>
