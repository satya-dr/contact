<%- include('../partials/head') %>

<style>
:root {
    --primary: #007bff;
    --primary-dark: #0056b3;
    --text-dark: #2c2f33;
    --text-light: #6c757d;
    --bg: #f3f5f9;
    --card-shadow: 0 10px 25px rgba(0,0,0,.08);
}

body {
    margin: 0;
    font-family: 'Segoe UI', sans-serif;
    background: var(--bg);
    color: var(--text-dark);
}

main {
    max-width: 1200px;
    margin: auto;
    padding: 2.5rem 1.5rem;
}

.page-header {
    text-align: center;
    margin-bottom: 2rem;
}
.page-header h1 {
    font-size: 2.2rem;
    font-weight: 800;
}
.page-header p {
    color: var(--text-light);
}

.grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 26px;
}

.card {
    background: white;
    border-radius: 18px;
    overflow: hidden;
    text-align: center;
    transition: .35s;
    border: 1px solid #e5e7eb;
    position: relative;
}

.card:hover {
    transform: translateY(-6px);
    box-shadow: var(--card-shadow);
}

.card-banner {
    height: 90px;
    background: linear-gradient(135deg, #007bff, #00c6ff);
}

.card-avatar {
    width: 110px;
    height: 110px;
    border-radius: 50%;
    border: 5px solid white;
    margin-top: -55px;
    object-fit: cover;
}

.card-content {
    padding: 18px 22px 26px;
}

.contact-name {
    font-size: 1.25rem;
    font-weight: 700;
}

.card-actions {
    display: flex;
    flex-direction: row;         
    justify-content: center;
    align-items: center;
    gap: 10px;
    margin-top: 18px;
    flex-wrap: nowrap;           
}
.card-actions .btn {
    white-space: nowrap;       
}

.btn {
    padding: 8px 18px;
    border-radius: 30px;
    font-size: .85rem;
    font-weight: 600;
    text-decoration: none;
    cursor: pointer;
    border: 1px solid #d1d5db;
    background: #fff;
    color: var(--text-dark);
}

.btn-primary {
    background: var(--primary);
    color: white;
    border-color: var(--primary);
}

.favorite-form {
    position: absolute;
    top: 12px;
    left: 12px;
}

.menu-wrapper {
    position: absolute;
    top: 12px;
    right: 12px;
    z-index: 10;
}

.menu-btn {
    background: rgba(255,255,255,.95);
    border: none;
    border-radius: 50%;
    padding: 6px 10px;
    cursor: pointer;
    font-size: 18px;
    box-shadow: 0 4px 10px rgba(0,0,0,.15);
}

.menu-dropdown {
    position: absolute;
    top: 38px;
    right: 0;
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 10px 25px rgba(0,0,0,.15);
    overflow: hidden;
    display: none;
    min-width: 140px;
}

.menu-dropdown a,
.menu-dropdown button {
    display: block;
    width: 100%;
    padding: 10px 14px;
    background: none;
    border: none;
    text-align: left;
    font-size: .9rem;
    cursor: pointer;
}

.menu-dropdown a:hover,
.menu-dropdown button:hover {
    background: #f1f5f9;
}

.menu-dropdown .danger {
    color: #dc2626;
}
@media (max-width: 420px) {
    .card-actions {
        flex-wrap: wrap;         
    }
}

</style>
</head>

<body>
<%- include('../partials/nav') %>

<main>

    <div class="page-header">
        <h1>Contact Directory</h1>
        <p>Manage your personal and professional connections</p>
    </div>

    <div class="grid">
        <% contacts.forEach(contact => { %>
        <article class="card">

            <%- include('../partials/favourite', { contact }) %>

            <div class="menu-wrapper">
                <button class="menu-btn"
                        onclick="toggleMenu(event, '<%= contact.id %>')">
                    ‚ãÆ
                </button>

                <div class="menu-dropdown" id="menu-<%= contact.id %>">
                    <a style="text-decoration: none; font-weight: 800;" href="/admin/edit-contact/<%= contact.id %>?editing=true">
                        ‚úèÔ∏è Edit
                    </a>
                    <button class="danger"
                            onclick="blockContact('<%= contact.name %>')">
                        üö´ Block
                    </button>
                    <form action="/admin/delete-contact/<%= contact.id %>"
      method="POST"
      onsubmit="return confirm('Are you sure you want to delete this contact?');"
      style="display:inline;">

  <button type="submit" class="btn btn-danger">
    üóë Delete
  </button>
</form>

                </div>
            </div>

            <div class="card-banner"></div>

            <img class="card-avatar"
                 src="https://ui-avatars.com/api/?name=<%= contact.name %>&background=random&size=300">

            <div class="card-content">
                <div class="contact-name"><%= contact.name %></div>

                <div class="card-actions">
                    <a href="tel:<%= contact.phone %>" class="btn btn-primary">üìû Call</a>
                    <a href="mailto:<%= contact.email %>" class="btn">‚úâ Email</a>
                    <a href="/contacts/<%= contact.id %>" class="btn">üëÅ Details</a>
                </div>
            </div>

        </article>
        <% }) %>
    </div>

</main>

<%- include('../partials/footer') %>

<script>
function toggleMenu(e, id) {
    e.stopPropagation();

    document.querySelectorAll('.menu-dropdown')
        .forEach(m => m.style.display = 'none');

    document.getElementById('menu-' + id).style.display = 'block';
}

document.addEventListener('click', () => {
    document.querySelectorAll('.menu-dropdown')
        .forEach(m => m.style.display = 'none');
});

function blockContact(name) {
    if (confirm(`Are you sure you want to block ${name}?`)) {
        alert(name + " blocked (backend later üòÑ)");
    }
}
</script>

</body>
</html>
