<%- include('../partials/head') %>

<style>
:root {
    --primary: #007bff;
    --primary-dark: #0056b3;
    --text-dark: #2c2f33;
    --text-light: #6c757d;
    --bg: #f3f5f9;
    --card-shadow: 0 10px 25px rgba(0,0,0,.08);
}

body {
    margin: 0;
    font-family: 'Segoe UI', sans-serif;
    background: var(--bg);
    color: var(--text-dark);
}

/* ===== Header ===== */
header {
    background: white;
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: 0 2px 6px rgba(0,0,0,.06);
}

/* ===== Main ===== */
main {
    max-width: 1200px;
    margin: auto;
    padding: 2.5rem 1.5rem;
}

/* ===== Page Header ===== */
.page-header {
    text-align: center;
    margin-bottom: 2.5rem;
}

.page-header h1 {
    font-size: 2.2rem;
    font-weight: 800;
}

.page-header p {
    color: var(--text-light);
}

/* ===== Search ===== */
.search-bar {
    display: flex;
    justify-content: center;
    margin-bottom: 2rem;
}

.search-bar input {
    width: 100%;
    max-width: 420px;
    padding: 12px 18px;
    border-radius: 50px;
    border: 1px solid #ddd;
    font-size: 1rem;
    outline: none;
    transition: .3s;
}

.search-bar input:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 4px rgba(0,123,255,.12);
}

/* ===== Grid ===== */
.grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 26px;
}

/* ===== Card ===== */
.card {
    background: white;
    border-radius: 18px;
    overflow: hidden;
    text-align: center;
    transition: .35s;
    border: 1px solid #e5e7eb;
}

.card:hover {
    transform: translateY(-8px);
    box-shadow: var(--card-shadow);
}

/* ===== Banner ===== */
.card-banner {
    height: 90px;
    background: linear-gradient(135deg, #007bff, #00c6ff);
}

/* ===== Avatar ===== */
.card-avatar {
    width: 110px;
    height: 110px;
    border-radius: 50%;
    border: 5px solid white;
    margin-top: -55px;
    object-fit: cover;
}

/* ===== Content ===== */
.card-content {
    padding: 18px 22px 26px;
}

.contact-name {
    font-size: 1.25rem;
    font-weight: 700;
    margin-top: 10px;
}

.contact-role {
    font-size: .75rem;
    letter-spacing: 1.4px;
    text-transform: uppercase;
    color: var(--primary);
    margin-top: 4px;
}

/* ===== Actions ===== */
.card-actions {
    display: flex;
    justify-content: center;
    gap: 10px;
    flex-wrap: wrap;
    margin-top: 18px;
}

.btn {
    padding: 8px 18px;
    border-radius: 30px;
    font-size: .85rem;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    transition: .25s;
}

.btn-primary {
    background: var(--primary);
    color: white;
    border: none;
}

.btn-primary:hover {
    background: var(--primary-dark);
}

.btn-outline {
    border: 1px solid #d1d5db;
    color: var(--text-dark);
}

.btn-outline:hover {
    background: #f1f5f9;
}

/* ===== Empty State ===== */
.empty {
    grid-column: 1/-1;
    text-align: center;
    padding: 3rem;
    background: white;
    border-radius: 16px;
    color: var(--text-light);
}

/* ===== Favorite Floating Button ===== */
.card {
    position: relative; /* IMPORTANT for absolute positioning */
}

.favorite-form {
    position: absolute;
    top: 12px;
    left: 12px;
    z-index: 5;
}

.favorite-btn {
    background: linear-gradient(135deg, #ffcc00, #ff9800);
    color: #333;
    border: none;
    padding: 6px 10px;
    border-radius: 50px;
    font-size: 0.75rem;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    display: flex;
    align-items: center;
    gap: 4px;
    transition: all .25s ease;
}

.favorite-btn::before {
    font-size: 0.8rem;
}

.favorite-btn:hover {
    transform: scale(1.05);
}

.favorite-btn:active {
    transform: scale(0.95);
}

</style>
</head>

<body>
<%- include('../partials/nav') %>

<main>
    <div class="page-header">
        <h1>Contact Directory</h1>
        <p>Manage your personal and professional connections</p>
    </div>

    <!-- Search -->
    <div class="search-bar">
        <input type="text" id="searchInput" placeholder="Search by name or email...">
    </div>

    <!-- Cards -->
    <div class="grid" id="contactsGrid">
        <% if (contacts.length > 0) { %>
            <% contacts.forEach(contact => { if (!contact) return; %>
                <article class="card"
    data-name="<%= contact.name.toLowerCase() %>"
    data-email="<%= contact.email.toLowerCase() %>">

    <!-- Favourite top-left -->
   <%- include('../partials/favourite', { contact: contact }) %>


    <div class="card-banner"></div>

    <img class="card-avatar"
         src="https://ui-avatars.com/api/?name=<%= contact.name %>&background=random&size=300">

    <div class="card-content">
        <div class="contact-name"><%= contact.name %></div>
        <div class="contact-role">Contact</div>

        <div class="card-actions">
            <a href="tel:<%= contact.phone %>" class="btn btn-primary">üìû Call</a>
            <a href="mailto:<%= contact.email %>" class="btn btn-outline">‚úâ Email</a>
            <a href="/contacts/<%= contact.id %>" class="btn btn-outline">üëÅ Details</a>
        </div>
    </div>
</article>

            <% }) %>
        <% } else { %>
            <div class="empty">No contacts found</div>
        <% } %>
    </div>
</main>

<script>
const input = document.getElementById("searchInput");
const cards = document.querySelectorAll(".card");
const grid = document.getElementById("contactsGrid");

input.addEventListener("input", () => {
    const val = input.value.toLowerCase();
    let visible = 0;

    cards.forEach(card => {
        const name = card.dataset.name;
        const email = card.dataset.email;

        if (name.includes(val) || email.includes(val)) {
            card.style.display = "block";
            visible++;
        } else {
            card.style.display = "none";
        }
    });

    if (!visible) {
        if (!document.querySelector(".empty")) {
            grid.insertAdjacentHTML(
                "beforeend",
                `<div class="empty">No contacts match your search</div>`
            );
        }
    } else {
        document.querySelector(".empty")?.remove();
    }
});
</script>

</body>
</html>

