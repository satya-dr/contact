<%- include('../partials/head') %>

<style>
:root {
    --primary: #007bff;
    --primary-dark: #0056b3;
    --text-dark: #2c2f33;
    --text-light: #6c757d;
    --bg: #f3f5f9;
    --card-shadow: 0 10px 25px rgba(0,0,0,.08);
}

body {
    margin: 0;
    font-family: 'Segoe UI', sans-serif;
    background: var(--bg);
    color: var(--text-dark);
}

/* ===== Main ===== */
main {
    max-width: 1200px;
    margin: auto;
    padding: 2.5rem 1.5rem;
}

/* ===== Header ===== */
.page-header {
    text-align: center;
    margin-bottom: 2rem;
}
.page-header h1 {
    font-size: 2.2rem;
    font-weight: 800;
}
.page-header p {
    color: var(--text-light);
}

/* ===== Top Actions ===== */
.top-actions {
    display: flex;
    justify-content: center;
    gap: 14px;
    flex-wrap: wrap;
    margin-bottom: 2rem;
}

.action-btn {
    padding: 10px 18px;
    border-radius: 30px;
    font-size: 0.85rem;
    font-weight: 600;
    cursor: pointer;
    border: none;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    transition: .25s;
    box-shadow: 0 4px 10px rgba(0,0,0,.1);
}

.btn-export {
    background: linear-gradient(135deg, #22c55e, #16a34a);
    color: #fff;
}
.btn-download {
    background: linear-gradient(135deg, #3b82f6, #2563eb);
    color: #fff;
}
.btn-import {
    background: linear-gradient(135deg, #f59e0b, #d97706);
    color: #fff;
}

.action-btn:hover {
    transform: translateY(-2px);
}

.import-input {
    display: none;
}

/* ===== Search ===== */
.search-bar {
    display: flex;
    justify-content: center;
    margin-bottom: 2rem;
}
.search-bar input {
    width: 100%;
    max-width: 420px;
    padding: 12px 18px;
    border-radius: 50px;
    border: 1px solid #ddd;
    font-size: 1rem;
}

/* ===== Grid ===== */
.grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 26px;
}

/* ===== Card ===== */
.card {
    background: white;
    border-radius: 18px;
    overflow: hidden;
    text-align: center;
    transition: .35s;
    border: 1px solid #e5e7eb;
    position: relative;
}

.card:hover {
    transform: translateY(-6px);
    box-shadow: var(--card-shadow);
}

.card-banner {
    height: 90px;
    background: linear-gradient(135deg, #007bff, #00c6ff);
}

.card-avatar {
    width: 110px;
    height: 110px;
    border-radius: 50%;
    border: 5px solid white;
    margin-top: -55px;
    object-fit: cover;
}

.card-content {
    padding: 18px 22px 26px;
}

.contact-name {
    font-size: 1.25rem;
    font-weight: 700;
}

/* ===== Actions ===== */
.card-actions {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 18px;
    flex-wrap: wrap;
}

.btn {
    padding: 8px 18px;
    border-radius: 30px;
    font-size: .85rem;
    font-weight: 600;
    text-decoration: none;
    cursor: pointer;
    border: 1px solid #d1d5db;
    background: #fff;
    color: var(--text-dark);
}

.btn-primary {
    background: var(--primary);
    color: white;
    border-color: var(--primary);
}

.btn-outline:hover {
    background: #f1f5f9;
}

/* ===== Block Button ===== */
.btn-danger {
    background: #fee2e2;
    color: #dc2626;
    border: 1px solid #fecaca;
}

.btn-danger:hover {
    background: #fecaca;
}

/* ===== Favourite Button ===== */
.favorite-form {
    position: absolute;
    top: 12px;
    left: 12px;
    z-index: 5;
}

.favorite-btn {
    background: linear-gradient(135deg, #ffcc00, #ff9800);
    color: #333;
    border: none;
    padding: 6px 10px;
    border-radius: 50px;
    font-size: 0.75rem;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 0 4px 10px rgba(0,0,0,.2);
    display: flex;
    align-items: center;
    gap: 4px;
    transition: .25s;
}

.favorite-btn:hover {
    transform: scale(1.05);
}
</style>
</head>

<body>
<%- include('../partials/nav') %>

<main>

    <!-- Page Header -->
    <div class="page-header">
        <h1>Contact Directory</h1>
        <p>Manage your personal and professional connections</p>
    </div>

    <!-- Top Actions -->
    <div class="top-actions">
        <button class="action-btn btn-export" onclick="exportContacts()">üì§ Export</button>
        <button class="action-btn btn-download" onclick="downloadContacts()">‚¨á Download</button>

        <label class="action-btn btn-import">
            üì• Import
            <input class="import-input" onclick="importContacts()">
        </label>
    </div>

    <!-- Search -->
    <div class="search-bar">
        <input type="text" id="searchInput" placeholder="Search by name or email...">
    </div>

    <!-- Cards -->
    <div class="grid" id="contactsGrid">
        <% contacts.forEach(contact => { %>
        <article class="card"
            data-name="<%= contact.name.toLowerCase() %>"
            data-email="<%= contact.email.toLowerCase() %>">

            <!-- Favourite -->
            <%- include('../partials/favourite', { contact: contact }) %>

            <div class="card-banner"></div>

            <img class="card-avatar"
                src="https://ui-avatars.com/api/?name=<%= contact.name %>&background=random&size=300">

            <div class="card-content">
                <div class="contact-name"><%= contact.name %></div>

                <div class="card-actions">
                    <a href="tel:<%= contact.phone %>" class="btn btn-primary">üìû Call</a>
                    <a href="mailto:<%= contact.email %>" class="btn">‚úâ Email</a>
                    <a href="/contacts/<%= contact.id %>" class="btn">üëÅ Details</a>

                    <!-- Block -->
                    <button class="btn btn-danger"
                        onclick="blockContact('<%= contact.name %>')">
                        üö´ Block
                    </button>
                </div>
            </div>
        </article>
        <% }) %>
    </div>

</main>

<%- include('../partials/footer') %>

