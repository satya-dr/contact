<%- include('../partials/head') %>

<style>
:root {
  --primary: #2563eb;
  --primary-dark: #1e40af;
  --bg: #f3f4f6;
  --text-dark: #1f2937;
  --text-light: #6b7280;
  --card-shadow: 0 10px 25px rgba(0,0,0,.08);
}

body {
  margin: 0;
  font-family: "Segoe UI", sans-serif;
  background: var(--bg);
  color: var(--text-dark);
}

.fav-container {
  max-width: 1200px;
  margin: 40px auto 60px;
  padding: 0 20px;
}

.fav-header {
  text-align: center;
  margin-bottom: 32px;
}

.fav-header h2 {
  font-size: 2.2rem;
  font-weight: 800;
  color: var(--primary);
}

.fav-header p {
  margin-top: 4px;
  color: var(--text-light);
  font-size: .9rem;
}

.fav-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
  gap: 20px;
}

.fav-card {
  background: white;
  border-radius: 18px;
  overflow: hidden;
  box-shadow: var(--card-shadow);
  transition: .25s ease;
  position: relative;
}

.fav-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 16px 30px rgba(0,0,0,.12);
}

.remove-form {
  position: absolute;
  top: 10px;
  right: 10px;
  z-index: 5;
}

.remove-btn {
  background: #fee2e2;
  color: #dc2626;
  border: none;
  width: 32px;
  height: 32px;
  border-radius: 50%;
  cursor: pointer;
  font-size: 1rem;
  font-weight: bold;
  box-shadow: 0 4px 10px rgba(0,0,0,.15);
  transition: .2s;
}

.remove-btn:hover {
  background: #fecaca;
  transform: scale(1.1);
}

.fav-avatar img {
  width: 100%;
  height: 150px;
  object-fit: cover;
}

.fav-content {
  padding: 14px 16px 16px;
}

.fav-content h3 {
  font-size: 1.1rem;
  font-weight: 700;
  margin-bottom: 6px;
}

.fav-info {
  font-size: .85rem;
  color: var(--text-light);
  margin-bottom: 12px;
}

.fav-info p {
  margin: 3px 0;
}

.fav-actions {
  display: flex;
}

.fav-actions a {
  flex: 1;
  text-align: center;
  padding: 8px;
  border-radius: 12px;
  font-size: .8rem;
  font-weight: 600;
  text-decoration: none;
  background: var(--primary);
  color: white;
  transition: .2s;
}

.fav-actions a:hover {
  background: var(--primary-dark);
}

.fav-empty {
  text-align: center;
  margin-top: 100px;
}

.fav-empty .emoji {
  font-size: 3.5rem;
  margin-bottom: 10px;
}

.fav-empty h3 {
  font-size: 1.8rem;
  margin-bottom: 6px;
}

.fav-empty p {
  color: var(--text-light);
  margin-bottom: 22px;
}

.fav-empty a {
  display: inline-block;
  background: var(--primary);
  color: white;
  padding: 10px 24px;
  border-radius: 14px;
  text-decoration: none;
  font-weight: 600;
}

.fav-empty a:hover {
  background: var(--primary-dark);
}
</style>
</head>

<body>
<%- include('../partials/nav') %>

<main class="fav-container">

  <div class="fav-header">
    <h2>‚≠ê Favourite Contacts</h2>
    <p>Your most important connections in one place</p>
  </div>

  <% if (favourites.length > 0) { %>

    <div class="fav-grid">
      <% favourites.forEach(contact => { if (!contact) return; %>

        <div class="fav-card">

          <form class="remove-form"
                action="/remove-favourite"
                method="POST"
                onsubmit="return confirm('Remove this contact from favourites?');">
            <input type="hidden" name="contactId" value="<%= contact.id %>">
            <button type="submit" class="remove-btn">‚úñ</button>
          </form>

          <div class="fav-avatar">
            <img
              src="https://ui-avatars.com/api/?name=<%= contact.name %>&background=random&size=300"
              alt="<%= contact.name %>">
          </div>

          <div class="fav-content">
            <h3><%= contact.name %></h3>

            <div class="fav-info">
              <p>üìû <%= contact.phone %></p>
              <% if (contact.email) { %>
                <p>‚úâ <%= contact.email %></p>
              <% } %>
            </div>

            <div class="fav-actions">
              <a href="/contacts/<%= contact.id %>">View Details</a>
            </div>
          </div>

        </div>

      <% }) %>
    </div>

  <% } else { %>

    <div class="fav-empty">
      <div class="emoji">üòï</div>
      <h3>No Favourite Contacts</h3>
      <p>Add contacts to favourites to see them here</p>
      <a href="/">Go to Contacts</a>
    </div>

  <% } %>

</main>

<%- include('../partials/footer') %>

</body>
</html>
