<%- include('../partials/head') %>

<style>
:root{
  --primary:#2563eb;
  --bg:#f4f6fb;
  --card:#ffffff;
  --text:#1f2937;
  --muted:#6b7280;
  --border:#e5e7eb;
}

body{
  margin:0;
  font-family:'Segoe UI',sans-serif;
  background:var(--bg);
  color:var(--text);
}

/* ===== Layout ===== */
main{
  max-width:800px;
  margin:3rem auto;
  padding:1rem;
}

/* ===== Card ===== */
.profile-card{
  background:var(--card);
  border-radius:14px;
  border:1px solid var(--border);
  overflow:hidden;
  animation:fadeUp .4s ease;
}

@keyframes fadeUp{
  from{opacity:0; transform:translateY(15px);}
  to{opacity:1; transform:none;}
}

/* ===== Header ===== */
.profile-header{
  padding:24px;
  display:flex;
  align-items:center;
  gap:18px;
  border-bottom:1px solid var(--border);
}

.avatar{
  width:90px;
  height:90px;
  border-radius:50%;
  object-fit:cover;
  background:#e5e7eb;
}

.profile-header h2{
  margin:0;
  font-size:1.4rem;
  font-weight:700;
}

.profile-header p{
  margin:4px 0 0;
  font-size:.9rem;
  color:var(--muted);
}

/* ===== Favourite ===== */
.favorite-form{
  margin-left:auto;
}

/* ===== Body ===== */
.profile-body{
  padding:24px;
  display:grid;
  grid-template-columns:1fr 1fr;
  gap:16px;
}

.field{
  padding:14px 16px;
  border:1px solid var(--border);
  border-radius:10px;
  font-size:.9rem;
  background:#fafafa;
}

.field span{
  display:block;
  font-size:.75rem;
  color:var(--muted);
  margin-bottom:4px;
}

/* ===== Actions ===== */
.profile-actions{
  padding:20px 24px;
  border-top:1px solid var(--border);
  display:flex;
  gap:10px;
  flex-wrap:wrap;
}

.btn{
  padding:10px 18px;
  border-radius:10px;
  font-size:.85rem;
  font-weight:600;
  text-decoration:none;
  border:1px solid var(--border);
  background:#fff;
  color:#111;
  cursor:pointer;
  transition:.2s;
}

.btn:hover{
  background:#f1f5f9;
}

.btn-primary{
  background:var(--primary);
  border-color:var(--primary);
  color:#fff;
}

.btn-primary:hover{
  background:#1e40af;
}

.btn-danger{
  background:#fee2e2;
  border-color:#fecaca;
  color:#dc2626;
}

.btn-danger:hover{
  background:#fecaca;
}

/* ===== Responsive ===== */
@media(max-width:640px){
  .profile-body{
    grid-template-columns:1fr;
  }
}
</style>
</head>

<body>
<%- include('../partials/nav') %>

<main>
  <div class="profile-card">

    <!-- Header -->
    <div class="profile-header">
      <img
        class="avatar"
        src="https://ui-avatars.com/api/?name=<%= contact.name %>&background=random&size=200"
        alt="Avatar"
      >

      <div>
        <h2><%= contact.name %></h2>
        <p>Saved Contact</p>
      </div>

      <!-- Favourite -->
      <%- include('../partials/favourite', { contact: contact }) %>
    </div>

    <!-- Body -->
    <div class="profile-body">
      <div class="field">
        <span>Phone</span>
        üìû <%= contact.phone %>
      </div>

      <% if (contact.email) { %>
      <div class="field">
        <span>Email</span>
        ‚úâ <%= contact.email %>
      </div>
      <% } %>

      <div class="field">
        <span>Date of Birth</span>
        üéÇ <%= contact.dob ? new Date(contact.dob).toDateString() : 'Not provided' %>
      </div>

      <% if (contact.address) { %>
      <div class="field">
        <span>Address</span>
        üìç <%= contact.address %>
      </div>
      <% } %>
    </div>

    <!-- Actions -->
    <div class="profile-actions">
      <a href="tel:<%= contact.phone %>" class="btn btn-primary">üìû Call</a>

      <% if (contact.email) { %>
        <a href="mailto:<%= contact.email %>" class="btn">‚úâ Email</a>
      <% } %>

      <a href="/" class="btn">‚¨Ö Back</a>
      <a href="#" class="btn btn-danger">üö´ Block</a>
    </div>

  </div>
</main>

<%- include('../partials/footer') %>
</body>
</html>
